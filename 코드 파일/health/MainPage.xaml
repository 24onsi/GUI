        </Button>
        <Button x:Name="Btn_booking" Content="" HorizontalAlignment="Left" Margin="211,189,0,0" VerticalAlignment="Top" Height="169" Width="173" Grid.RowSpan="2" Style="{StaticResource BtnMouseOverDisable}" Click="Btn_booking_Click">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0"/>
