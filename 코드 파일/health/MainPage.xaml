        </Button>
        <Button x:Name="Btn_caution" Content="" HorizontalAlignment="Left" Margin="386,190,0,0" VerticalAlignment="Top" Height="169" Width="173" Grid.RowSpan="2" Style="{StaticResource BtnMouseOverDisable}" Click="Btn_caution_Click">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0"/>
            </Button.Background>
        </Button>
        <Button x:Name="Btn_doc" Content="" HorizontalAlignment="Left" Margin="27,79,0,0" VerticalAlignment="Top" Height="169" Width="183" Grid.Row="1" Style="{StaticResource BtnMouseOverDisable}" Grid.RowSpan="2" Click="Btn_doc_Click">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0"/>
            </Button.Background>
        </Button>
        <Button x:Name="Btn_result" Content="" HorizontalAlignment="Left" Margin="211,79,0,0" VerticalAlignment="Top" Height="169" Width="173" Grid.Row="1" Style="{StaticResource BtnMouseOverDisable}" Grid.RowSpan="2" Click="Btn_result_Click">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0"/>
            </Button.Background>
        </Button>
        <Button x:Name="Btn_map" Content="" HorizontalAlignment="Left" Margin="384,79,0,0" VerticalAlignment="Top" Height="169" Width="174" Grid.Row="1" Style="{StaticResource BtnMouseOverDisable}" Click="Btn_map_Click" Grid.RowSpan="2">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0"/>
            </Button.Background>
        </Button>
        <Rectangle HorizontalAlignment="Center" Height="6" Margin="0,65,0,0" VerticalAlignment="Top" Width="600" Fill="#FF28257B"/>
        <Rectangle HorizontalAlignment="Center" Height="6" Margin="0,364,0,0" VerticalAlignment="Top" Width="600" Fill="#FF28257B" Grid.Row="2"/>
        <Label Content="안녕하세요. 메뉴를 선택해주세요." HorizontalAlignment="Left" Margin="37,129,0,0" VerticalAlignment="Top" Width="409" Background="{x:Null}" Foreground="#FF28257B" FontSize="20" FontWeight="Bold"/>
        <Image Margin="22,15,394,245" Source="/Resources/mark.jpg" Stretch="Fill"/>
        <Rectangle HorizontalAlignment="Center" Height="114" Margin="0,202,0,0" Grid.Row="2" VerticalAlignment="Top" Width="530" RadiusX="10" RadiusY="10" Fill="White" Stroke="#FFBDBDBD">
            <Rectangle.Effect>
                <DropShadowEffect ShadowDepth="2" Direction="250" Color="#FF5D5D5D" Opacity="0.5" BlurRadius="4"/>
            </Rectangle.Effect>
        </Rectangle>
        <Label Content="062)601-8333&#xD;&#xA;      601-8334" HorizontalAlignment="Left" Margin="117,232,0,0" Grid.Row="2" VerticalAlignment="Top" Width="138" Height="57" FontSize="17" Foreground="#FF5F5F5F" VerticalContentAlignment="Center" FontWeight="Bold"/>
        <Label Content="평      일 : 08:30~17:00&#xD;&#xA;토  요 일 : 08:30~12:00&#xD;&#xA;점심시간 : 12:15~13:30" HorizontalAlignment="Left" Margin="337,224,0,0" Grid.Row="2" VerticalAlignment="Top" Width="193" Height="78" FontSize="15" FontWeight="Bold" Foreground="#FF5F5F5F" VerticalContentAlignment="Center"/>
        <Image Margin="68,233,471,191" Grid.Row="2" Source="/Resources/phone-call.png" Stretch="Fill"/>
        <Label Content="검진 상담 및 근무시간 " HorizontalAlignment="Left" Margin="50,196,0,0" Grid.Row="2" VerticalAlignment="Top" Width="204" Height="37" FontSize="12" Foreground="#FF5F5F5F" VerticalContentAlignment="Center" FontWeight="Bold" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.741"/>
                    <RotateTransform Angle="1.207"/>
                    <TranslateTransform Y="-0.893"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Image Margin="298,236,249,188" Grid.Row="2" Source="/Resources/alarm-clock (1).png" Stretch="Fill"/>
    </Grid>
</Page>
